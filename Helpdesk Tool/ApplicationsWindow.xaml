<Window x:Class="Helpdesk_Tool.ApplicationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Helpdesk_Tool"
        mc:Ignorable="d"
        Title="Installed Applications" Height="800" Width="450">
    <Border BorderThickness="10">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <DockPanel>
                <TextBlock x:Name="computerTextBox" DockPanel.Dock="Top" Margin="0 0 0 20" FontWeight="Bold"/>
                <TextBox x:Name="applicationsTextBox" DockPanel.Dock="Top" BorderThickness="0" Background="Transparent" IsReadOnly="True"/>
            </DockPanel>
        </ScrollViewer>
    </Border>
</Window>
